{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es5",
    "outDir": "build",
    "rootDir": ".",
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "removeComments": true,
    "noImplicitAny": true,
    "suppressImplicitAnyIndexErrors": true,
    "types": [
      // add node as an option
      "node"
   ],
   // typeRoots option has been previously configured
   "typeRoots": [
      // add path to @types
      "node_modules/@types"
   ],
   "lib": [
    "es2017",
    "dom"
  ]
  },
  "exclude": [
    "node_modules",
    "npmdist",
    "package"
  ],
  "compileOnSave": false,
  "buildOnSave": false,
  "atom": {
    "rewriteTsconfig": false
  }
}
